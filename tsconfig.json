{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  